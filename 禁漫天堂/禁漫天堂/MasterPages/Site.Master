<%@ Master Language="C#" AutoEventWireup="true" CodeFile="Site.Master.cs" Inherits="禁漫天堂.MasterPages.Site" %>

<!DOCTYPE html>
<html lang="en">
<head runat="server">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><asp:ContentPlaceHolder ID="PageTitle" runat="server" /></title>
    <link href="/App_Themes/主题one/styles.css" rel="stylesheet" />
    
</head>
<body>
    <form id="form1" runat="server">
        <header>
            <!-- 顶部导航 -->
            <div class="navbar">
                <div class="navbar-logo">
                    <a href="/Pages/首页.aspx"><img src="/Content/images/logo.png" alt="禁漫天堂" class="logo" /></a>
                </div>
                <ul class="nav-links">
                    <li><a href="/Pages/首页.aspx">首页</a></li>
                    <li><a href="漫画List.aspx?tag=韩漫">韩漫</a></li>
